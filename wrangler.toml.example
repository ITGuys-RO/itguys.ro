name = "itguys-website"
compatibility_date = "2024-09-23"
compatibility_flags = ["nodejs_compat"]
main = ".open-next/worker.js"
routes = [
  { pattern = "itguys.ro", custom_domain = true },
  { pattern = "www.itguys.ro", custom_domain = true }
]

[assets]
directory = ".open-next/assets"

[vars]
# Sensitive values are set via `wrangler secret put` in the deploy workflow
# Non-secret vars can be added here

[[d1_databases]]
binding = "DB"
database_name = "itguys-ro"
database_id = "${D1_DATABASE_ID}"

[[r2_buckets]]
binding = "BLOG_IMAGES"
bucket_name = "itguys-blog-images"

[observability]
[observability.logs]
enabled = true
invocation_logs = true